{
  "name": "node-typescript-skeleton",
  "version": "0.1.0",
  "description": "Template repository for Node.js and Typescript project.",
  "main": "src/index.js",
  "author": "Markus Ylisiurunen",
  "license": "MIT",
  "scripts": {
    "build": "ttsc",
    "dev": "concurrently \"ttsc --watch\" \"nodemon --watch build --delay 1 build/index.js\"",
    "lint:eslint": "eslint '{src,examples}/**/*.{js,ts}'",
    "lint:prettier": "prettier --list-different '{src,examples}/**/*.{js,ts}'",
    "test": "jest"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@types/jest": "^24.0.15",
    "@types/minimist": "^1.2.0",
    "@types/node": "^12.6.8",
    "@typescript-eslint/eslint-plugin": "^1.12.0",
    "@typescript-eslint/parser": "^1.12.0",
    "concurrently": "^4.1.1",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^22.12.0",
    "eslint-plugin-prettier": "^3.1.0",
    "husky": "^3.0.1",
    "jest": "^24.8.0",
    "lint-staged": "^9.2.0",
    "nodemon": "^1.19.1",
    "prettier": "^1.18.2",
    "ts-node": "^8.3.0",
    "ttypescript": "^1.5.7",
    "typescript": "^3.5.3",
    "typescript-transform-paths": "^1.1.6"
  },
  "dependencies": {
    "inquirer": "^6.5.0",
    "minimist": "^1.2.0"
  }
}
